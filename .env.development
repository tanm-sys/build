# Development Environment Configuration

APP_ENVIRONMENT=development
DEBUG=true
DEBUG_VERBOSE=true

# Backend settings for development
BACKEND_HOST=localhost
BACKEND_PORT=8000
BACKEND_RELOAD=true
BACKEND_LOG_LEVEL=debug

# Streamlit settings for development
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_SERVER_PORT=8501

# Simulation settings for development
SIMULATION_NUM_AGENTS=50
SIMULATION_USE_PARALLEL_THRESHOLD=25

# Logging for development
LOG_LEVEL=DEBUG

# Development-specific features
HOT_RELOAD=true
AUTO_RESTART=true
RUN_TESTS_ON_START=false

# CORS for development
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8501","http://localhost:8502","http://127.0.0.1:3000","http://127.0.0.1:8501","http://127.0.0.1:8502"]

# Development monitoring
MONITORING_ENABLED=true
METRICS_RETENTION_DAYS=1