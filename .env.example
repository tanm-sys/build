# Environment Configuration Template for 3D AI Simulation Platform
# Copy this file to .env and adjust values for your environment

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Application name and version
APP_NAME=3D AI Simulation Platform
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# =============================================================================
# BACKEND SERVER CONFIGURATION
# =============================================================================

# FastAPI Backend Server
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=true
BACKEND_LOG_LEVEL=info

# CORS settings for frontend integration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8501","http://localhost:8502"]

# =============================================================================
# STREAMLIT UI CONFIGURATION
# =============================================================================

# Streamlit Server
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_PAGE_TITLE=Decentralized AI Simulation
STREAMLIT_LAYOUT=wide

# 3D API Server (runs alongside Streamlit)
API_SERVER_PORT=8502
WEBSOCKET_SERVER_PORT=8503

# =============================================================================
# SIMULATION CONFIGURATION
# =============================================================================

# Simulation parameters
SIMULATION_NUM_AGENTS=100
SIMULATION_USE_PARALLEL_THRESHOLD=50
SIMULATION_STOP_ON_ERROR=false

# Performance settings
SIMULATION_UPDATE_INTERVAL=0.1
SIMULATION_MAX_STEPS=1000

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# SQLite database (default)
DATABASE_PATH=ledger.db
DATABASE_TIMEOUT=30
DATABASE_CHECK_SAME_THREAD=false

# PostgreSQL (optional - for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/simulation
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# =============================================================================
# REDIS CONFIGURATION (OPTIONAL)
# =============================================================================

# Redis for caching and session storage
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_CACHE_TTL=300

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Logging levels: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/simulation.log

# Log rotation
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_COMPRESSION=true

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Monitoring settings
MONITORING_ENABLED=true
MONITORING_INTERVAL=30
METRICS_RETENTION_DAYS=7

# Health check settings
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# API Security
API_SECRET_KEY=your-secret-key-change-this-in-production
API_TOKEN_EXPIRE_MINUTES=30

# CORS settings
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["GET","POST","PUT","DELETE","OPTIONS"]
CORS_ALLOW_HEADERS=["*"]

# Rate limiting (requests per minute)
RATE_LIMIT_PER_MINUTE=100

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# Threading and parallelism
MAX_WORKERS=8
PARALLEL_PROCESSING=true

# Memory management
MEMORY_LIMIT_MB=1024
GARBAGE_COLLECTION_INTERVAL=60

# Caching settings
CACHE_ENABLED=true
CACHE_SIZE_MB=100
CACHE_TTL_SECONDS=300

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================

# Debug mode
DEBUG=true
DEBUG_VERBOSE=false

# Hot reload settings
HOT_RELOAD=true
AUTO_RESTART=true

# Test settings
RUN_TESTS_ON_START=false
GENERATE_TEST_DATA=true

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================

# Production optimizations
PRODUCTION_OPTIMIZATIONS=true
COMPRESS_RESPONSES=true
MINIFY_STATIC_FILES=true

# SSL/TLS settings (for production)
SSL_CERT_FILE=
SSL_KEY_FILE=
SSL_CIPHERS=ECDHE+AESGCM:ECDHE+CHACHA20:DHE+AESGCM:DHE+CHACHA20:!aNULL:!MD5:!DSS

# =============================================================================
# FRONTEND INTEGRATION
# =============================================================================

# Frontend URLs (when available)
FRONTEND_URL=http://localhost:3000
FRONTEND_API_URL=http://localhost:8000

# WebSocket settings
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=10
WEBSOCKET_MAX_SIZE=10485760

# =============================================================================
# DEPLOYMENT SCENARIOS
# =============================================================================

# Development environment
DEV_SIMULATION_NUM_AGENTS=50
DEV_LOG_LEVEL=DEBUG
DEV_HOT_RELOAD=true

# Staging environment
STAGING_SIMULATION_NUM_AGENTS=100
STAGING_LOG_LEVEL=INFO
STAGING_OPTIMIZATIONS=true

# Production environment
PROD_SIMULATION_NUM_AGENTS=200
PROD_LOG_LEVEL=WARNING
PROD_OPTIMIZATIONS=true
PROD_SSL=true
PROD_RATE_LIMIT=1000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/disable specific features
FEATURE_3D_VISUALIZATION=true
FEATURE_REAL_TIME_UPDATES=true
FEATURE_API_DOCUMENTATION=true
FEATURE_PERFORMANCE_MONITORING=true
FEATURE_ERROR_TRACKING=true

# Experimental features
FEATURE_ADVANCED_ANALYTICS=false
FEATURE_MACHINE_LEARNING=false
FEATURE_CUSTOM_PLUGINS=false

# =============================================================================
# EXTERNAL INTEGRATIONS
# =============================================================================

# Prometheus monitoring
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090
PROMETHEUS_METRICS_PATH=/metrics

# Grafana dashboards
GRAFANA_ENABLED=false
GRAFANA_URL=http://localhost:3001
GRAFANA_API_KEY=

# Slack notifications (optional)
SLACK_WEBHOOK_URL=
SLACK_NOTIFICATIONS=false

# Email notifications (optional)
SMTP_SERVER=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_NOTIFICATIONS=false

# =============================================================================
# DATA EXPORT AND BACKUP
# =============================================================================

# Export settings
EXPORT_FORMATS=["json","csv","xlsx"]
EXPORT_COMPRESSION=true
EXPORT_ENCRYPTION=false

# Backup settings
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=./backups

# =============================================================================
# COMPLIANCE AND PRIVACY
# =============================================================================

# GDPR compliance
GDPR_COMPLIANT=false
DATA_RETENTION_DAYS=2555
ANONYMIZE_USER_DATA=false

# Audit logging
AUDIT_LOG_ENABLED=false
AUDIT_LOG_LOCATION=./audit

# Data encryption
ENCRYPT_SENSITIVE_DATA=false
ENCRYPTION_KEY=

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================

# Add any custom configuration variables here
# These can be accessed in the application code
CUSTOM_SETTING_1=
CUSTOM_SETTING_2=
