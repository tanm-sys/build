# Environment Configuration Template
# Copy this file to .env and customize as needed

# Environment type (development, production)
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=false
API_CORS_ORIGINS=*
API_REQUEST_TIMEOUT=30
API_MAX_CONCURRENT_REQUESTS=100

# Database configuration
DATABASE_PATH=ledger.db
DATABASE_CONNECTION_POOL_SIZE=10
DATABASE_TIMEOUT=30
DATABASE_CHECK_SAME_THREAD=false
DATABASE_RETRY_ATTEMPTS=3
DATABASE_RETRY_DELAY=1.0
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_RECYCLE=3600
DATABASE_ECHO=false

# Ray Configuration (v2.45.0)
RAY_ENABLE=true
RAY_ADDRESS=auto
RAY_NUM_CPUS=
RAY_NUM_GPUS=
RAY_OBJECT_STORE_MEMORY=
RAY_DASHBOARD_HOST=0.0.0.0
RAY_DASHBOARD_PORT=8265
RAY_INCLUDE_DASHBOARD=true
RAY_LOG_TO_DRIVER=true
RAY_LOGGING_LEVEL=INFO
RAY_IGNORE_REINIT_ERROR=true

# Simulation configuration
SIMULATION_DEFAULT_AGENTS=50
SIMULATION_DEFAULT_STEPS=100
SIMULATION_GRID_WIDTH=10
SIMULATION_GRID_HEIGHT=10
SIMULATION_STEP_DELAY=0.1
SIMULATION_ANOMALY_RATE=0.05
SIMULATION_USE_PARALLEL_THRESHOLD=50
SIMULATION_MAX_SIMULATION_TIME=300
SIMULATION_ENABLE_CHECKPOINTING=true
SIMULATION_CHECKPOINT_INTERVAL=10
SIMULATION_RANDOM_SEED=

# Agent configuration
AGENT_INITIAL_WEALTH=1
AGENT_INITIAL_TRUST_SCORE=100
AGENT_TRUST_INCREMENT=10
AGENT_TRUST_DECREMENT=20
AGENT_BLACKLIST_THRESHOLD=50
AGENT_TRADE_PROBABILITY=0.1
AGENT_MOVE_PROBABILITY=0.5
AGENT_MAX_WEALTH=1000
AGENT_MIN_WEALTH=0
AGENT_TRUST_DECAY_RATE=0.95

# Logging configuration
LOGGING_LEVEL=INFO
LOGGING_FILE=logs/simulation.log
LOGGING_MAX_BYTES=10485760
LOGGING_BACKUP_COUNT=5
LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOGGING_ENABLE_JSON_LOGGING=false
LOGGING_ENABLE_FILE_ROTATION=true
LOGGING_ENABLE_CONSOLE_OUTPUT=true
LOGGING_LOG_REQUESTS=false
LOGGING_LOG_PERFORMANCE=false

# Streamlit Dashboard Configuration (v1.39.0)
STREAMLIT_PAGE_TITLE=Decentralized AI Simulation
STREAMLIT_LAYOUT=wide
STREAMLIT_AGENT_SLIDER_MIN=10
STREAMLIT_AGENT_SLIDER_MAX=200
STREAMLIT_AGENT_SLIDER_DEFAULT=50
STREAMLIT_ANOMALY_SLIDER_MIN=0.0
STREAMLIT_ANOMALY_SLIDER_MAX=0.1
STREAMLIT_ANOMALY_SLIDER_DEFAULT=0.05
STREAMLIT_STEPS_SLIDER_MIN=10
STREAMLIT_STEPS_SLIDER_MAX=100
STREAMLIT_STEPS_SLIDER_DEFAULT=50
STREAMLIT_CACHE_TTL=5
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=0.0.0.0
STREAMLIT_ENABLE_CORS=false
STREAMLIT_ENABLE_XSRF_PROTECTION=true
STREAMLIT_MAX_UPLOAD_SIZE=200
STREAMLIT_MAX_MESSAGE_SIZE=200
STREAMLIT_ENABLE_WEBSOCKET_COMPRESSION=false
STREAMLIT_GATHER_USAGE_STATS=false

# Monitoring configuration
MONITORING_HEALTH_CHECK_INTERVAL=30
MONITORING_METRICS_PORT=8000
MONITORING_ENABLE_PROMETHEUS=false
MONITORING_ENABLE_DETAILED_METRICS=true
MONITORING_METRICS_RETENTION_DAYS=7
MONITORING_ENABLE_HEALTH_CHECKS=true
MONITORING_HEALTH_CHECK_PATH=/health
MONITORING_METRICS_PATH=/metrics
MONITORING_ENABLE_REQUEST_TRACING=false
MONITORING_TRACING_SAMPLE_RATE=0.1

# Performance configuration
PERFORMANCE_ENABLE_MULTIPROCESSING=true
PERFORMANCE_MAX_WORKERS=4
PERFORMANCE_MEMORY_LIMIT_MB=1024
PERFORMANCE_GC_THRESHOLD=1000
PERFORMANCE_ENABLE_CACHING=true
PERFORMANCE_CACHE_SIZE_MB=100
PERFORMANCE_ENABLE_ASYNC_PROCESSING=false
PERFORMANCE_THREAD_POOL_SIZE=10
PERFORMANCE_ENABLE_MEMORY_PROFILING=false

# Security configuration
SECURITY_ENABLE_INPUT_VALIDATION=true
SECURITY_MAX_REQUEST_SIZE_MB=10
SECURITY_RATE_LIMIT_REQUESTS_PER_MINUTE=100
SECURITY_ENABLE_RATE_LIMITING=true
SECURITY_ALLOWED_HOSTS=
SECURITY_ENABLE_HTTPS_REDIRECT=false
SECURITY_SSL_CERT_FILE=
SECURITY_SSL_KEY_FILE=
SECURITY_SECRET_KEY=
SECURITY_ENABLE_CSRF_PROTECTION=true

# Development configuration
DEVELOPMENT_DEBUG_MODE=false
DEVELOPMENT_ENABLE_PROFILING=false
DEVELOPMENT_LOG_SQL_QUERIES=false
DEVELOPMENT_AUTO_RELOAD=false
DEVELOPMENT_ENABLE_HOT_RELOAD=false
DEVELOPMENT_SHOW_TRACEBACKS=true
DEVELOPMENT_ENABLE_DEBUG_TOOLBAR=false
