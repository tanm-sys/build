# Production Environment Configuration

APP_ENVIRONMENT=production
DEBUG=false
DEBUG_VERBOSE=false

# Backend settings for production
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_RELOAD=false
BACKEND_LOG_LEVEL=warning

# Streamlit settings for production
STREAMLIT_SERVER_HEADLESS=true
STREAMLIT_SERVER_PORT=8501

# Simulation settings for production
SIMULATION_NUM_AGENTS=200
SIMULATION_USE_PARALLEL_THRESHOLD=100

# Logging for production
LOG_LEVEL=WARNING

# Production-specific features
HOT_RELOAD=false
AUTO_RESTART=false
RUN_TESTS_ON_START=false

# CORS for production (restrictive)
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]

# Production monitoring
MONITORING_ENABLED=true
METRICS_RETENTION_DAYS=30

# Production optimizations
PRODUCTION_OPTIMIZATIONS=true
COMPRESS_RESPONSES=true

# SSL settings for production
SSL_CERT_FILE=/etc/ssl/certs/simulation.crt
SSL_KEY_FILE=/etc/ssl/private/simulation.key

# Rate limiting for production
RATE_LIMIT_PER_MINUTE=1000

# Security settings for production
API_SECRET_KEY=your-production-secret-key-here
ENCRYPT_SENSITIVE_DATA=true

# Database settings for production
DATABASE_URL=postgresql://simulation_user:simulation_password@postgres:5432/simulation
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Redis for production caching
REDIS_URL=redis://redis:6379/0

# Backup settings for production
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=90

# Health check settings for production
HEALTH_CHECK_INTERVAL=60
HEALTH_CHECK_TIMEOUT=30